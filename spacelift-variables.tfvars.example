# Spacelift Variables Configuration Example
# Copy these variables to your Spacelift stack configuration

# Basic Configuration
aws_region = "us-east-1"
project_name = "SecOPS-CoPilot"
environment = "Development"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
public_subnets = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets = ["10.0.11.0/24", "10.0.12.0/24"]
availability_zones = ["us-east-1a", "us-east-1b"]

# EC2 Configuration
instance_type = "t3.micro"
ami_id = "ami-0c02fb55956c7d316"  # Amazon Linux 2 in us-east-1

# Auto Scaling Configuration
desired_capacity = "2"
min_size = "1"
max_size = "4"

# Security Configuration
ssh_cidr = "0.0.0.0/0"  # WARNING: Restrict this in production!

# SSH Public Key (SENSITIVE - Set this in Spacelift UI as sensitive variable)
# ssh_public_key = "ssh-rsa YOUR_PUBLIC_KEY_HERE"

# Spacelift Configuration (Optional)
spacelift_stack_id = ""
spacelift_run_id = ""

# Common Tags
tags = {
  Owner       = "pkrishnamurthy@altimetrik.com"
  Project     = "SecOPS-CoPilot"
  Application = "POC"
  Environment = "Development"
  ManagedBy   = "spacelift"
} 